@model EntertainmentGuild.Models.Stocktake

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashborad</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Stock takes</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="col-md-6 offset-3">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="text-center">
                            Add New Stock takes
                        </h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ItemId" />
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="col-sm-6 col-form-label">
                                            Name <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-sm-12">
                                            <select asp-for="SourceId" class="form-control" asp-items="ViewBag.SourceId"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="col-sm-6 col-form-label">
                                            external Link <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-sm-12">
                                            <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="col-sm-6 col-form-label">
                                            Genre <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-sm-12">
                                            <input asp-for="Quantity" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="col-sm-6 col-form-label">
                                            Genre <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-sm-12">
                                            <input asp-for="Price" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row ml-3">
                                <div class="col-md-4">
                                    <a class="btn btn-primary" asp-action="Index">Back to page</a>
                                </div>
                                <div class="col-md-2">
                                    <input type="submit" value="Update" class="btn btn-warning" />

                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
