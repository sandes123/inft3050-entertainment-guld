                                    <ul>
                                        <li class="nav-parent-li">
                                            <a href="/Home/Index" class="nav-parent-a a-hover">Home</a>
                                        </li>

                                        <li class="nav-parent-li">
                                            <a href="/Home/Shop" class="nav-parent-a a-hover">Products</a>
                                        </li>
                                        
                                        <li class="nav-parent-li">
                                            <a href="/Home/About" class="nav-parent-a a-hover">About</a>
                                        </li>

                                        
                                
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="text-center">
                                    <h6 class="nav-parent-a">Entertainment Guild</h6>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="nav-images">
                                    <ul>
                                        @if (ViewBag.Name != null)
                                        {

                                            <li class="nav-parent-li">
                                                <a href="/Home/UserDashborad" class="nav-parent-a a-hover">User Dashborad</a>
                                            </li>
                                            <li class="nav-parent-li">
                                                <a href="/Home/Logout" class="nav-parent-a a-hover">Logout</a>
                                            </li>

                                        }
                                        else
                                        {
                                            <li class="nav-images-li">
                                                <a href="/Home/UserLogin">
                                                    <i class="bi bi-person"></i>
                                                </a>
                                            </li>

                                        }
                                        <li class="nav-images-li position-relative">
                                            <a href="/Home/Cart" id="cart-bar">
                                                <i class="bi bi-cart4"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
