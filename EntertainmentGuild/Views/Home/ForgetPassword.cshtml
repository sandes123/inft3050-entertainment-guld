@model EntertainmentGuild.DTO.UserDTO
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_Login.cshtml";

}
<div class="login-form-wrap">
    <div class="text-center">
        <h1 class="form-heading">Forgot password</h1>
    </div>
    <form class="form form-login" asp-action="ForgetPassword" method="post">
        <div class="text-danger"asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="techno-input-group">
                <label for="" class="techno-label">User Name <span>*</span></label>
                <div class="techno-icon-input">
                    <span><i class="bi bi-person-circle"></i></span>
                    <input class="form-control" placeholder="userName" asp-for="UserName" autocomplete="username" aria-required="true" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>

                
            </div>
            <div class="techno-input-group">
                <label for="" class="techno-label">New Password <span>*</span></label>

                <div class="techno-icon-input">
                    <span><i class="bi bi-person-circle"></i></span>
                    <input class="form-control" type="password" placeholder="New Password" asp-for="Password" autocomplete="New Password" aria-required="true" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="techno-input-group">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <a asp-action="Login" asp-controller="Home" class="techno-forget-password">
                            Login
                        </a>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex justify-content-end">

                        </div>
                    </div>
                </div>

            </div>
            <div class="techno-input-group">
                <input type="submit" class="default-button w-100 hover-button" value="Reset Password" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}