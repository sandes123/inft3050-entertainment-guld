@model EntertainmentGuild.DTO.UserDTO
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container.my-5 {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
    }

    form {
        background-color: #fff;
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 10px;
    }

    label {
        font-weight: bold;
    }

    .input-group {
        margin-top: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
<div class='staic-banner'>
    <div class="container">
        <h2>Update Profile</h2>
        <p class="Static-navigation">
            <a href="/Home/Index">Home</a>
            <i class="bi bi-chevron-right"></i>
            <a>Update Profile</a>
        </p>
    </div>
</div>
<div>
    <p class="text-center">Update your Profile</p>
</div>
<div class="container my-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="Profile" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">

                    <div class="col-md-12 mt-2">
                        <div class="form-group">
                            <label for="confirmPassword">Name<span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-phone"></i></span>
                                <input type="text" asp-for="Name" class="form-control" id="username" placeholder="Name">
                            </div>
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mt-2">
                        <div class="form-group">
                            <label for="confirmPassword">Adress<span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-phone"></i></span>
                                <input type="text" asp-for="StreetAdress" class="form-control" id="username" placeholder="Street Adress">
                            </div>
                            <span class="text-danger" asp-validation-for="StreetAdress"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <div class="form-group">
                            <label for="username">Suburb<span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" class="form-control" asp-for="Suburb" id="username" placeholder="Suburb">
                            </div>
                            <span class="text-danger" asp-validation-for="Suburb"></span>

                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <div class="form-group">
                            <label for="username">PostalCode<span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="number" class="form-control" asp-for="PostalCode" id="username" placeholder="PostalCode">
                            </div>
                            <span class="text-danger" asp-validation-for="PostalCode"></span>

                        </div>
                    </div>

                    <div class="col-md-6 mt-2">
                        <div class="form-group">
                            <label for="username">State<span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <select class="form-control" asp-for="State">
                                    <option value="VIC">VIC</option>
                                    <option value="NSW">NSW</option>
                                    <option value="NT">NT</option>
                                    <option value="ACT">ACT</option>
                                    <option value="TAS">TAS</option>
                                    <option value="WA">WA</option>
                                    <option value="SA">SA</option>
                                    <option value="QLD">QLD</option>
                                </select>
                            </div>
                            <span class="text-danger" asp-validation-for="PostalCode"></span>

                        </div>

                    </div>
                    <div class="col-md-6 mt-2">

                        <div class="form-group">
                            <label for="confirmPassword">Mobile Number<span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-phone"></i></span>
                                <input type="number" asp-for="PhoneNumber" class="form-control" id="username" placeholder="Mobile Number">
                            </div>
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                    </div>                
                    <div class="col-md-12 mt-2">
                        <div class="form-group">
                            <label for="confirmPassword">Email<span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input type="email" asp-for="Email" class="form-control" id="username" readonly placeholder="Email">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 text-end">
                        <input type="submit" class="btn btn-primary mt-3" value="Update" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

