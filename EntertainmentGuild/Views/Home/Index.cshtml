@model IEnumerable<EntertainmentGuild.ViewModel.ShopViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .default-button.text-capitalize.hover-button {
        text-decoration: none;
    }

    .banner-button.hover-button {
        text-decoration: none;
    }

        .banner-button.hover-button.animate__animated animate__fadeInUp {
            text-decoration: none;
        }
</style>
<div class="banner">
    <div id="carouselExampleIndicators" class="carousel carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators slider-indecators">
